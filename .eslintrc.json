{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:vue/essential",
        "plugin:vue/recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "vue"
    ],
    "rules": {
        "semi": ["error", "never"],
        "camelcase" : "error",
        "no-trailing-spaces" : "error",
        "no-var": "error",
        "object-curly-spacing": ["error", "always"],
        "object-curly-newline" : ["error", {
            "multiline": true,
            "minProperties": 1
        }]
    }
}